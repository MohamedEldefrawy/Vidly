@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-top-10">
    <h2>New Customer</h2>

    @using (Html.BeginForm("Create", "Customers", FormMethod.Post))
    {
        <div class="form-group">
            <div class="m-1">
                @Html.LabelFor(c => c.Customer.Name)
                @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Customer.Name)

            </div>

            <div class="m-1">
                @Html.LabelFor(c => c.Customer.BirthDate)
                <input class="form-control" data-val="true"
                       data-val-date="The field Birthdate must be a date."
                       data-val-required="The Birthdate field is required."
                       id="Customer_BirthDate" name="Customer.BirthDate"
                       type="date" aria-describedby="Customer_BirthDate-error" aria-invalid="true">

                @Html.ValidationMessageFor(c => c.Customer.BirthDate)

            </div>
            <div class="m-1">
                @Html.LabelFor(c => c.Customer.MemmberShipTypeID)
                @Html.DropDownListFor(c => c.Customer.MemmberShipTypeID, new SelectList(Model.MemmberShipTypes, "Id", "Name"), "Select Memmbership"
               , new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Customer.MemmberShipTypeID)

            </div>


            <div class="m-1">
                <div class="checkbox">
                    <label>Subscribed to Newsletter?</label>
                    @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsetter)
                </div>
            </div>

            @Html.HiddenFor(c => c.Customer.ID)
        </div>

        <div class="m-1">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    }


</div>

@section scripts
  {

    @Scripts.Render("~/bundles/jqueryval")
}

