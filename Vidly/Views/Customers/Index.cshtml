@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="padding-top-10">
    <h1>Customers</h1>
    @if (Model.Count > 0)
    {
        <ul class="list-group alert-heading">
            <li class="list-group-item">
                <p class="font-weight-bold"> Customer</p>
            </li>
            @foreach (var customer in Model)
            {
                string name = customer.Name;

                <li class="list-group-item">
                    @Html.ActionLink(name, "Details", new { id = customer.ID })
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted"> We don't have any customers yet.</p>
    }
</div>
